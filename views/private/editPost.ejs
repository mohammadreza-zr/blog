<div class="container ">
    <h3 class="m-auto text-center">ویرایش پست</h3>
    <div class="w-50 m-auto">
        <%- include ('../includes/validationErrors.ejs') %>
    </div>
    <form action="/dashboard/edit-post/<%= post._id %> " method="post" class="form-group m-auto">
        <div>
            <label for="title">عنوان</label>
        <input type="text" id="title" value="<%= post.title %> " name="title" class="form-control w-50">
        </div>
        <div class="my-3">
            <label for="status">وضعیت</label>
            <br>
            <select name="status" id="status" class="form-check w-25">
                <option <%= post.status === 'public' ? 'selected' : '' %> value="public">عمومی</option>
                <option <%= post.status === 'private' ? 'selected' : '' %> value="private">خصوصی</option>
            </select>
        </div>
        <div class="form-group mb-3">
            <div class="input-group-prepend">
                <span class="position-relative myTooltipC">
                    <button class="btn copy btn-sm btn-outline-secondary myTooltip w-25"
                    type="button" id="copy" data-clipboard-target="#imageStatus">
                    کپی لینک
                        <span id="copy-text" class="myTooltip-text">کلیک کنید</span>
                    </button>
                </span>
                <span class="position-relative myTooltipC ">
                    <button class="btn copy btn-sm btn-outline-secondary myTooltip d-block"
                    type="button" id="imageUpload">
                    آپلود عکس
                        <span class="myTooltip-text">کلیک کنید</span>
                    </button>
                </span>
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="selectedImage">
                    <label for="selectedImage" id="imageStatus" class="custom-file-label">
                        یک عکس انتخاب کن
                    </label>
                </div>
            </div>
            <div id="progressDiv" style="display: none;">
                <div class="progress">
                    <div id="progress" class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%"></div>
                </div>
            </div>
        </div>
        <div class="mt-3">
            <label for="body">متن اصلی پست</label>
        <textarea name="body" id="body" class="form-control"><%= post.body %> </textarea>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn badge-success">ثبت تغییرات</button>
            <a href="/dashboard" class="btn btn-warning">انصراف</a>
        </div>
    </form>
</div>