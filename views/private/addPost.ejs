<div class="container row-cols-2">
    <h2>افزدون پست جدید</h2>
    <form action="/dashboard/add-post" method="post" class="form-group">
        <div>
            <label for="title">عنوان</label>
        <input type="text" id="title" name="title" class="form-control w-50">
        </div>
        <div class="mt-3">
            <label for="status">وضعیت</label>
            <br>
            <select name="status" id="status" class="form-check">
                <option value="عمومی">عمومی</option>
                <option value="خصوصی">خصوصی</option>
            </select>
        </div>
        <div class="mt-3">
            <label for="text">متن اصلی پست</label>
        <textarea name="body" id="text" class="form-control"></textarea>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn badge-success">ساخت پست</button>
            <button type="reset" class="btn btn-warning">انصراف</button>
        </div>
    </form>
</div>