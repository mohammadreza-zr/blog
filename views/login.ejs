<form class="form-signin" action="/users/login" method="post">
    <h1 class="h3 mb-3 font-weight-normal">ورود به بخش مدیریت</h1>
    <%- include ('./includes/loginMessages.ejs') %>
    <label for="inputEmail" class="sr-only">آدرس ایمیل</label>
    <input type="email" id="inputEmail" name="email" class="form-control mb-2" placeholder="ایمیل" required autofocus>
    <label for="inputPassword" class="sr-only">کلمه عبور</label>
    <input type="password" id="inputPassword" name="password" class="form-control" placeholder="کلمه عبور" required>
    <div class="checkbox mb-3">
      <label>
        <input type="checkbox" name="remember" value="remember-me"> من را به خاطر بسپار
      </label>
    </div>
    <div class="form-group">
    <div class="g-recaptcha" data-sitekey="6LdbdvocAAAAAE9n0AUA8eqmckYtUT3np1ACeUOQ"></div>
    </div>
    <div class="mb-3">
      <a href="/users/forget-password" class="btn btn-outline-primary" >رمزم را فراموش کرده ام</a>
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">ورود</button>
</form>
