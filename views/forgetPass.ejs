<form class="form-signin" action="/users/forget-password" method="post">
    <h1 class="h3 mb-3 font-weight-normal">فراموشی کلمه عبور</h1>
    <%- include ('./includes/loginMessages.ejs') %>
    <label for="inputEmail" class="sr-only">آدرس ایمیل</label>
    <input type="email" id="inputEmail" name="email" class="form-control mb-2"
    placeholder="ایمیل خود را وارد کنید" required autofocus>
    <div class="form-group">
        <div class="g-recaptcha" data-sitekey="6LdbdvocAAAAAE9n0AUA8eqmckYtUT3np1ACeUOQ"></div>
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">ارسال</button>
</form>